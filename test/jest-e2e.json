{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "*.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/entity/(.*)": "<rootDir>/../libs/entity/src/$1",
    "@app/entity": "<rootDir>/../libs/entity/src"
  }
}
